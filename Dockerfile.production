# =============================================================================
# Webscout API - Production Dockerfile
# Optimized for Dokploy deployment
# =============================================================================

# =============================================================================
# Stage 1: Builder - Instalar dependencias
# =============================================================================
FROM python:3.11-slim as builder

WORKDIR /app

# Build arguments
ARG WEBSCOUT_VERSION=latest
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION

# Metadata labels
LABEL maintainer="webscout-api@example.com" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.title="Webscout API Server - Production" \
      org.opencontainers.image.description="OpenAI-compatible API for multiple LLM providers"

# Instalar dependencias del sistema necesarias para compilación
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gcc \
    g++ \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Crear y activar entorno virtual
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Actualizar herramientas de instalación
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# ⭐ INSTALACIÓN DE WEBSCOUT CON TODAS LAS DEPENDENCIAS
# Instalar webscout con extras de API (incluye huggingface_hub y todas las deps)
RUN pip install --no-cache-dir "webscout[api]" && \
    pip install --no-cache-dir gunicorn uvicorn[standard]

# Verificar instalación
RUN python -c "import webscout; print(f'✅ Webscout {webscout.__version__} instalado')" && \
    python -c "import huggingface_hub; print('✅ huggingface_hub instalado')" && \
    python -c "import fastapi; print('✅ fastapi instalado')" && \
    python -c "import gunicorn; print('✅ gunicorn instalado')"

# =============================================================================
# Stage 2: Runtime - Imagen final ligera
# =============================================================================
FROM python:3.11-slim

WORKDIR /app

# Copiar entorno virtual desde builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Instalar solo dependencias runtime mínimas
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        curl \
        ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Crear directorios necesarios
RUN mkdir -p /app/logs /app/data

# Crear usuario no-root para seguridad
RUN useradd -m -u 1000 -s /bin/bash appuser && \
    chown -R appuser:appuser /app

# Cambiar a usuario no-root
USER appuser

# Exponer puerto (configurable via ENV)
EXPOSE 8000

# Variables de entorno por defecto
ENV WEBSCOUT_HOST=0.0.0.0 \
    WEBSCOUT_PORT=8000 \
    WEBSCOUT_WORKERS=4 \
    WEBSCOUT_LOG_LEVEL=info \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:${WEBSCOUT_PORT:-8000}/monitor/health || exit 1

# Comando por defecto - usar webscout-server
# El servidor se configura via variables de entorno
CMD ["webscout-server"]
