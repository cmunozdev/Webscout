# =============================================================================
# Dockerfile.dokploy - Optimized for Dokploy Deployment
# Based on original Dockerfile with fixes for production deployment
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Builder
# -----------------------------------------------------------------------------
FROM python:3.11-slim as builder

ARG WEBSCOUT_VERSION=latest
ARG TARGETPLATFORM
ARG BUILDPLATFORM

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_DEFAULT_TIMEOUT=100

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Upgrade pip
RUN pip install --upgrade pip setuptools wheel

# Install webscout with API dependencies
RUN if [ "$WEBSCOUT_VERSION" = "latest" ]; then \
        pip install git+https://github.com/cmunozdev/Webscout.git#egg=webscout[api]; \
    else \
        pip install git+https://github.com/cmunozdev/Webscout.git@${WEBSCOUT_VERSION}#egg=webscout[api]; \
    fi

# Install missing dependencies that cause import errors
RUN pip install \
    huggingface-hub \
    transformers \
    torch --index-url https://download.pytorch.org/whl/cpu

# Install production server dependencies
RUN pip install \
    gunicorn[gthread] \
    uvicorn[standard] \
    prometheus-client \
    structlog

# -----------------------------------------------------------------------------
# Stage 2: Runtime
# -----------------------------------------------------------------------------
FROM python:3.11-slim as runtime

ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=0.2.0

LABEL maintainer="cmunozdev" \
      org.label-schema.build-date=$BUILD_DATE \
      org.label-schema.name="webscout-api-dokploy" \
      org.label-schema.description="Webscout API Server for Dokploy - OpenAI-compatible LLM proxy" \
      org.label-schema.url="https://github.com/cmunozdev/Webscout" \
      org.label-schema.vcs-ref=$VCS_REF \
      org.label-schema.vcs-url="https://github.com/cmunozdev/Webscout" \
      org.label-schema.vendor="cmunozdev" \
      org.label-schema.version=$VERSION

# Create non-root user
RUN groupadd --gid 1000 webscout && \
    useradd --uid 1000 --gid webscout --shell /bin/bash --create-home webscout

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    PATH="/opt/venv/bin:$PATH" \
    PYTHONHASHSEED=random \
    MALLOC_ARENA_MAX=2 \
    WEBSCOUT_HOST=0.0.0.0 \
    WEBSCOUT_PORT=8000 \
    WEBSCOUT_WORKERS=4 \
    WEBSCOUT_LOG_LEVEL=info \
    WEBSCOUT_DEBUG=false \
    WEBSCOUT_DATA_DIR=/app/data \
    WEBSCOUT_REQUEST_LOGGING=true \
    WEBSCOUT_API_TITLE="Webscout OpenAI API" \
    WEBSCOUT_API_DESCRIPTION="OpenAI API compatible interface for various LLM providers" \
    WEBSCOUT_API_VERSION="0.2.0" \
    WEBSCOUT_API_DOCS_URL="/docs" \
    WEBSCOUT_API_REDOC_URL="/redoc" \
    WEBSCOUT_API_OPENAPI_URL="/openapi.json" \
    WEBSCOUT_CORS_ORIGINS="*"

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libffi8 \
    libssl3 \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Setup application directory
WORKDIR /app
RUN chown -R webscout:webscout /app

# Create directories
RUN mkdir -p /app/logs /app/data && \
    chown -R webscout:webscout /app/logs /app/data

# Switch to non-root user
USER webscout

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:${WEBSCOUT_PORT:-8000}/monitor/health || exit 1

# Start server
CMD ["python", "-m", "webscout.server.server"]
