# =============================================================================
# Multi-stage Dockerfile for Webscout API
# Based on official Webscout documentation
# =============================================================================

# =============================================================================
# Stage 1: Builder
# =============================================================================
FROM python:3.11-slim as builder

WORKDIR /app

# Build arguments
ARG WEBSCOUT_VERSION=latest
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION

# Labels (metadata)
LABEL maintainer="your-email@example.com" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.title="Webscout API Server" \
      org.opencontainers.image.description="OpenAI API compatible interface for various LLM providers"

# Instalar dependencias del sistema para compilación
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gcc \
    g++ \
    git \
    && rm -rf /var/lib/apt/lists/*

# Crear entorno virtual
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Actualizar pip
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# ⭐ INSTALACIÓN CORRECTA DE WEBSCOUT CON EXTRAS
# Según la documentación oficial: pip install "webscout[api]"
RUN pip install --no-cache-dir "webscout[api]"

# Si tienes requirements.txt adicionales, instalar también
COPY requirements.txt* ./
RUN if [ -f requirements.txt ]; then \
        pip install --no-cache-dir -r requirements.txt; \
    fi

# =============================================================================
# Stage 2: Runtime
# =============================================================================
FROM python:3.11-slim

WORKDIR /app

# Copiar entorno virtual desde builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Instalar solo dependencias runtime necesarias
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        curl \
        ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copiar código de la aplicación (si existe en el repo)
COPY . .

# Crear directorios necesarios
RUN mkdir -p /app/logs /app/data

# Crear usuario no-root
RUN useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app

# Cambiar a usuario no-root
USER appuser

# Exponer puerto
EXPOSE 8000

# Variables de entorno por defecto
ENV WEBSCOUT_HOST=0.0.0.0 \
    WEBSCOUT_PORT=8000 \
    WEBSCOUT_WORKERS=1 \
    WEBSCOUT_LOG_LEVEL=info \
    PYTHONUNBUFFERED=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:${WEBSCOUT_PORT:-8000}/monitor/health || exit 1

# Comando por defecto usando webscout-server
# Según la documentación: webscout-server es el comando del servidor API
CMD ["webscout-server"]
